<body>
  <h1>Discord Bewerbung</h1>
  <form id="appForm">
    <input type="text" id="username" placeholder="Dein Discord-Name" required><br>
    <textarea id="reason" placeholder="Warum willst du beitreten?" required></textarea><br>
    <button type="submit">Bewerbung absenden</button>
  </form>

  <script>
    const webhookURL = "https://discord.com/api/webhooks/1411588038605144135/fGzTRKY7mw73KV4VGpOVcmuAXK0Kf8JEsAGLY92mXebBN7kNY1XbLOyBAlqJS7ahXCZD";

    document.getElementById("appForm").addEventListener("submit", function(e){
      e.preventDefault();
      const username = document.getElementById("username").value;
      const reason = document.getElementById("reason").value;

      fetch(webhookURL, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          content: `üì© Neue Bewerbung!\nüë§ Name: ${username}\nüí¨ Grund: ${reason}`
        })
      })
      .then(res => alert("Bewerbung abgeschickt!"))
      .catch(err => alert("Fehler beim Senden."));
    });
  </script>
